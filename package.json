{
  "name": "deck.gl",
  "description": "A WebGL overlay suite consists of multiple layers",
  "version": "2.0.10",
  "keywords": [
    "webgl",
    "visualization",
    "overlay",
    "layer",
    "babel",
    "es6"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/uber-common/deck.gl.git"
  },
  "main": "src/index.js",
  "license": "MIT",
  "browserify": {
    "transform": [
      "babelify",
      "glslify",
      "envify"
    ]
  },
  "standard": {
    "ignore": [
      "**/build/**",
      "**/dist/**",
      "**/examples/**",
      "**/Documents/**"
    ]
  },
  "dependencies": {
    "autobind-decorator": "^1.3.3",
    "babel-plugin-transform-builtin-extend": "1.1.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-2": "^6.3.13",
    "earcut": "^2.0.6",
    "geojson-normalize": "0.0.1",
    "global": "^4.3.0",
    "lodash.flattendeep": "^3.0.2",
    "lodash.isequal": "^3.0.4",
    "lodash.isfunction": "^3.0.6",
    "lodash.throttle": "^3.0.4",
    "lodash.where": "^3.1.0",
    "luma.gl": "git://github.com/uber-common/luma.gl#v0.0.2",
    "viewport-mercator-project": "^2.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.3.15",
    "babel-eslint": "^4.1.6",
    "babel-polyfill": "^6.1.19",
    "babelify": "^7.2.0",
    "budo": "^8.0.3",
    "d3-request": "^0.2.2",
    "envify": "^3.4.0",
    "eslint": "^1.10.3",
    "eslint-plugin-react": "^3.13.1",
    "faucet": "0.0.1",
    "glslify": "^5.0.0",
    "immutable": "^3.7.5",
    "r-dom": "^2.1.0",
    "react": "^0.14.0",
    "react-dom": "^0.14.0",
    "react-map-gl": "^0.6.0",
    "react-redux": "^4.0.0",
    "react-test-utils": "^3.0.1",
    "redux": "^3.0.4",
    "tap-browser-color": "^0.1.2",
    "tape": "^4.0.0",
    "tape-catch": "^1.0.4",
    "uber-standard": "^5.1.0",
    "uglify-js": "^2.6.1"
  },
  "peerDependencies": {
    "react": "^0.14.0",
    "react-dom": "^0.14.0"
  },
  "scripts": {
    "build": "npm run build-clean && npm run build-compile && npm run build-copy-glsl-files && npm run build-script && npm run build-script-min",
    "build-clean": "rm -fr dist/*",
    "build-compile": "babel src -d dist --source-maps inline",
    "build-copy-glsl-files": "rsync -a --prune-empty-dirs --include '*/' --include '*.glsl' --exclude '*' src/ dist/",
    "build-script": "browserify src/bundle.js -o dist/deckgl.js",
    "build-script-min": "uglifyjs -o dist/deckgl.min.js dist/deckgl.js",
    "prepublish": "npm run build",
    "lint": "uber-standard",
    "precommit": "npm run lint -s",
    "test": "babel-node --only=deck.gl/src,deck.gl/test,luma.gl test/node.js | faucet",
    "test-browser": "budo test/browser.js:build/test-bundle.js --dir test -t babelify --live --open --port 3001 --watch-glob '**/*.{html,css,scss,js}'",
    "start": "budo example/main.js:example/bundle.js -t babelify --live --open --port 3000 --watch-glob '**/*.{html,css,js}'"
  }
}
